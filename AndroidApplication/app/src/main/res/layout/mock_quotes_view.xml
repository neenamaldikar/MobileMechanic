<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Broken passenger Window"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        card_view:cardBackgroundColor="#ecebeb"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Quote 1: price $250"
                android:textColor="#101010"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:layout_marginEnd="9dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toStartOf="@+id/imageButton"
                android:text="08/19/2017"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="#ecebeb"
                android:onClick="showPopup"
                android:src="@drawable/ic_action_more_vert" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="Mechanic: John doe" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_alignBottom="@+id/textView8"
                android:layout_toEndOf="@+id/textView6"
                android:text="Distance: 2.8 miles" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="12dp"
                android:text="Hi, I can replace the window with the stock one. Repair can be done on the spot, just bring your vehicle." />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        card_view:cardBackgroundColor="#ecebeb"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Quote 2: price $199"
                android:textColor="#101010"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView62"
                android:layout_alignBottom="@+id/textView62"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toStartOf="@+id/imageButton2"
                android:text="08/19/2017"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="#ecebeb"
                android:onClick="showPopup"
                android:src="@drawable/ic_action_more_vert" />

            <TextView
                android:id="@+id/textView82"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView62"
                android:layout_below="@+id/textView62"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="Mechanic: Jane doe" />

            <TextView
                android:id="@+id/textView92"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView82"
                android:layout_alignBottom="@+id/textView82"
                android:layout_toEndOf="@+id/textView62"
                android:text="Distance: 7.2 miles" />

            <TextView
                android:id="@+id/textView112"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView82"
                android:layout_below="@+id/textView82"
                android:layout_marginTop="12dp"
                android:text="Hello, this job will take 1 hour and I need the vin number of the vehicle to get the correct window part." />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        card_view:cardBackgroundColor="#ecebeb"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/textView623"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Quote 3: price $169"
                android:textColor="#101010"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView723"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView623"
                android:layout_alignBottom="@+id/textView623"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toStartOf="@+id/imageButton23"
                android:text="08/19/2017"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/imageButton23"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="#ecebeb"
                android:onClick="showPopup"
                android:src="@drawable/ic_action_more_vert" />

            <TextView
                android:id="@+id/textView823"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView623"
                android:layout_below="@+id/textView623"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="Mechanic: Theo Klein" />

            <TextView
                android:id="@+id/textView923"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView823"
                android:layout_alignBottom="@+id/textView823"
                android:layout_toEndOf="@+id/textView623"
                android:text="Distance: 6.5 miles" />

            <TextView
                android:id="@+id/textView1123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView823"
                android:layout_below="@+id/textView823"
                android:layout_marginTop="12dp"
                android:text="Hello, I can come on-site and this work should take me around 1 hour. " />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>