<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mm.mobilemechanic">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_mm"
        android:label="@string/title_main"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.mm.mobilemechanic.LoginActivity"
            android:label="@string/title_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mm.mobilemechanic.MainActivity"
            android:label="@string/title_main"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name="com.mm.mobilemechanic.UserProfileActivity"
            android:label="@string/title_profile_edit" />
        <activity
            android:name="com.mm.mobilemechanic.MechEditActivity"
            android:label="@string/title_profile_edit" />

        <activity
            android:name="com.mm.mobilemechanic.JobFormActivity"
            android:label="New Job" />

        <activity
            android:name="com.mm.mobilemechanic.authorization.RestClientActivity"
            android:label="@string/test_rest_client_name" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/GOOGLE_API_KEY" />


    </application>

</manifest>